<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical">

    <com.github.vipulasri.timelineview.TimelineView
        android:id="@+id/row_timeline_layout_time_marker"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:markerSize="20dp"
        app:lineWidth="2dp"
        app:startLineColor="@color/white"
        app:endLineColor="@color/white"
        app:linePadding="5dp"/>

    <TextView
        android:id="@+id/row_timeline_layout_text_view_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="11:00 AM"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp">

        <TextView
            android:id="@+id/row_timeline_layout_text_view_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_bold"
            android:textSize="18sp"
            android:text="Study"/>

        <TextView
            android:id="@+id/row_timeline_layout_text_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prepare for test"/>


    </LinearLayout>


</LinearLayout>